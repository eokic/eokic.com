{
  "extends": "astro/tsconfigs/strict",

  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "jsx": "react",
    "types": [
      "@types/react",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@public/*": [ "public/*" ],
    },
    "plugins": [
      { "name": "@astrojs/ts-plugin" },
    ],
  },

  "include": [
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.astro",
    "src/**/*.json",
  ],

  "exclude": [
    "src/node_modules/**/*",
  ]
}