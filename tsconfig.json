{
  "extends": "astro/tsconfigs/strict",

  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@public/*": [ "public/*" ],
    }
  },

  "include": [
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.astro",
    "src/**/*.json",
  ],

  "exclude": [
    "src/node_modules/**/*",
  ]
}