ul.lightning-list,
.hero-body ul {
  @apply m-0 p-0;
  list-style: none;

  li {
    @apply relative m-0 p-0;
    margin-bottom: 0.25em;
    padding-left: 1.25em;

    /* Safari does not seem to support the ::marker */
    &::marker {
      display: none;
    }

    /* Safari does not seem to support the ::marker */
    &::before {
      @apply absolute -left-1;
      top: 0.25em;
      width: 1.1em;
      height: 1.1em;
      background: url('data:image/svg+xml;base64,')
        center/contain no-repeat;
      content: '';
    }
  }
}

.hero-body ul {
  li {
    margin-bottom: 0.5em;
  }
}
