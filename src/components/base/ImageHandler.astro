---
// TYPES
import { NStrapiMedia } from '@/interfaces'

// PROPS
interface Props {
  img: NStrapiMedia.Unknown
  class?: string
  style?: Record<string, unknown>
  imgClass?: string
  imgStyle?: Record<string, unknown>
  fullWidth?: boolean
  fullHeight?: boolean
  nonStandardRatio?: boolean
  decorative?: boolean
  important?: boolean
  contain?: boolean
  inline?: boolean
  alt?: string // should come from Strapi though
}
const {
  img,
  class: cssClass,
  style,
  imgClass,
  imgStyle,
  fullWidth,
  fullHeight,
  nonStandardRatio,
  decorative,
  important,
  contain,
  inline,
  alt,
} = Astro.props

// COMPONENTS
import { StrapiImage } from '.'
import { Image } from 'astro:assets'
---

<StrapiImage
  {img}
  class={cssClass}
  {style}
  {imgClass}
  {imgStyle}
  {fullWidth}
  {fullHeight}
  {nonStandardRatio}
  {decorative}
  {important}
  {contain}
  {inline}
  {alt}
/>

