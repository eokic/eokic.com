---
// TYPES
import { NStrapiMedia } from '@/interfaces'

// PROPS
interface Props {
  img: NStrapiMedia.Unknown
  cssClass?: string
  imgClass?: string
  fullWidth?: boolean
  nonStandardRatio?: boolean
  important?: boolean
  inline?: boolean
  alt?: string // should come from Strapi though
}
const {
  alt,
  cssClass,
  fullWidth,
  img,
  inline,
  imgClass,
  important,
  nonStandardRatio,
} = Astro.props

// COMPONENTS
import { StrapiImage } from '.'
import { Image } from 'astro:assets'
---

<StrapiImage
  {img}
  {cssClass}
  {imgClass}
  {fullWidth}
  {nonStandardRatio}
  {important}
  {inline}
  {alt}
/>

