---
// TYPES
import type { IGlobal, IHome } from '@/interfaces'

// PROPS
interface Props {
  globals: IGlobal
  home: IHome
}
const { globals, home } = Astro.props

// COMPONENTS
import { Aside, Clients, Main } from './'
import { ImageHandler, Link, Section } from '@/components'
import { Noise } from '@/components/vfx'
---

<Section id="hero" cssClass="pt-2 sm:pt-3 md:pt-5 lg:pt-7 xl:pt-8 ">
  <div
    class="absolute top-0 left-0 w-full h-full opacity-10"
    style="filter: url(#noise); mix-blend-mode: multiply;"
  >
  </div>

  <div class:list={['srkl -blue']}></div>
  <div class:list={['srkl -yellow']}></div>
  <div class:list={['srkl -white']}></div>

  <!-- Logo -->
  <div
    class="mb-6 sm:mb-7 md:mb-outer lg:mb-section h2 leading-none text-center md:text-start"
  >
    <Link
      presentational
      link={{
        url: '/',
      }}
    >
      <ImageHandler
        cssClass="inline-block"
        imgClass="h-[50px]"
        img={globals.logo.colorOnLight}
        nonStandardRatio
        fullWidth
        inline
      />
    </Link>
  </div>

  <!-- 2-column layout -->
  <div class="relative grid grid-cols-5 gap-5">
    <!-- Left: main content -->
    <main class="z-2 col-span-12 md:col-span-3 text-center md:text-start">
      <Main {globals} {home} />
    </main>

    <!-- Right: photo -->
    <aside
      class:list={[
        'invisible max-xs:absolute max-xs:pointer-events-none xs:visible',
        'relative z-1 col-span-12 md:col-span-2 lg:pr-6 xl:pr-7 2xl:pr-0',
        'max-lg:flex justify-end -mt-4 md:-mt-9 lg:-mt-10 xl:-mt-11',
      ]}
    >
      <Aside {globals} {home} />
    </aside>
  </div>

  <!-- Clients -->
  <div slot="after-container" class="mt-section">
    <Clients />
  </div>
</Section>
